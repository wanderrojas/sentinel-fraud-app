# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# ============================================
# PROJECT INFO
# ============================================
PROJECT_NAME=BCP Fraud Guardian
VERSION=1.0.0
API_V1_PREFIX=/api/v1

# ============================================
# DATABASE
# ============================================
# Local (SQLite)
DATABASE_URL=sqlite:///./fraud_detection.db

# Azure SQL Database (cuando despliegues)
# DATABASE_URL=mssql+pyodbc://usuario:password@servidor.database.windows.net:1433/frauddetection?driver=ODBC+Driver+18+for+SQL+Server

# ============================================
# LLM PROVIDER
# ============================================
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
MAX_TOKENS=2000

# ============================================
# OPENAI API
# ============================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ============================================
# AZURE OPENAI (opcional)
# ============================================
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# ============================================
# OTHER API KEYS (opcional)
# ============================================
ANTHROPIC_API_KEY=sk-ant-your-key-here
TAVILY_API_KEY=tvly-your-key-here

# ============================================
# API SECURITY
# ============================================
API_KEY_NAME=X-API-Key
API_KEY_VALUE=change-this-to-your-secure-key

# ============================================
# CHROMADB
# ============================================
CHROMA_PERSIST_DIRECTORY=./chroma
CHROMA_COLLECTION_NAME=fraud_policies